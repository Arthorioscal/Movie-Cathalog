<%= form_with(model: movie, local: true) do | form | %>
    <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div class="field">
        <%= form.label :year %>
        <%= form.number_field :year %>
    </div>
   
    <div class="field">  
        <%= form.label :synopsis %>
        <%= form.text_area :synopsis %>
    </div>

    <div class="field">
        <%= form.label :country %>
        <%= form.text_field :country %>
    </div>

    <div class="field">
        <%= form.label :duration %>
        <%= form.number_field :duration %>
    </div>

    <div class="field">
        <%= form.label :genre%>
        <%= form.collection_select :genre_id, Genre.all, :id, :name%>
    </div>

    <div class="field">
        <%= form.label :director%>
        <%= form.collection_select :director_id, Director.all, :id, :name%>
    </div>
        <div class="actions">
        <%= form.submit %>
    </div>
<% end %>
