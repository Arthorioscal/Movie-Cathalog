<h1>Directors</h1>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @directors.each do |director| %>
            <tr>
                <td><%= director.name %></td>
                <td>
                    <%= link_to 'Edit', edit_director_path(director) %>
                </td>
                <td>
                    <%= link_to 'Show', director_path(director) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>